<%= simple_form_for(@listing) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title %>
    </div>

    <div class="form-inputs">
      <%= f.input :description %>
    </div>

    <div class="form-inputs">
      <%= f.input :address %>
    </div>

    <div class="form-inputs">
      <%= f.input :country %>
    </div>

    <div class="form-inputs">
      <%= f.input :price_per_night %>
    </div>

    <div class="form-inputs">
      <%= f.input :bedroom_count %>
    </div>

    <div class="form-inputs">
      <%= f.input :bathroom_count %>
    </div>

    <div class="form-inputs">
      <%= f.input :bed_count %>
    </div>

    <div class="form-inputs">
      <%= f.input :house_rules %>
    </div>

    <div class="form-inputs">
      <%= f.input :guest_count %>
    </div>

    <div class="form-actions btn btn-danger">
      <%= f.button :submit %>
    </div>
  <% end %>
