<div class="row">
  <div class="cards">
    <% @listings.each do |listing| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card" style="width: 20rem;">
          <img src="https://www.savoirflair.com/wp-content/uploads/2017/11/Indonesia-AirBnB-1024x683.jpg" class="card-img-top" alt="...">
        </div>
        <div class="card-body card-font">
          <%= link_to listing.title, listing_path(listing), class: "link" %>
          <p class="mb-0"><%= listing.country %></p>
          <p>$<%= listing.price_per_night%> SGD night</p>
        </div>
      </div>
    <% end %>
  </div>
</div>

